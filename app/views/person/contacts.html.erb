<html>
<h1>Contact Listing </h1>
<head>
<style type="text/css">
  .span4{padding:4px 4px 15px 4px;border-style:solid;border-width:1px;border-color:transparent;}
  .email{color:#00ff00;}
  </style>
</head>
<body>
  <div class="row">
  <% @contacts.each do |i|%>
  <div class="span4">
    <div class="span1">
      <% if !i[:image].nil? %>
        <%=image_tag("#{i[:image]}",:size => "80x80")%>
        <%else%>
        <%=image_tag("person.png",:size => "80x80")%>
      <%end%>
    </div>

    <div class="span2">
        
          <div >
            <b>Name :<%=i[:name]%></b>
          </div>
          <div class="email">
            Email: <%=i[:email]%>
          </div>
            <div >
            Mobile:<%=i[:mobile]%>
          </div>
          <div >
            OfficeNumber:<%=i[:office_no]%>
          </div>
           <div >
            
          </div>
      </div>
  </div>

<% end %>
</div>
</body>
</html>

